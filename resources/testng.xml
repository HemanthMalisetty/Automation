        <!-- START CONNECTED-->


        <packages>

            <package name="com.automation.ui.connected.testcases.login"/>
            <package name="com.automation.ui.connected.testcases.home"/>
            <package name="com.automation.ui.connected.testcases.serverdetails"/>
            <package name="com.automation.ui.connected.testcases.dashboardviewtest"/>
            <package name="com.automation.ui.connected.testcases.serverdetails.filter"/>


        </packages>

        <classes>
            <class name="com.automation.ui.connected.testcases.login.LoginTest">
                <methods>
                    <exclude name="verifyInValidUserNullPassword"/>
                    <exclude name="verifyValidUserNullPassword"/>
                    <exclude name="verifyInValidUserInvalidPassword"/>
                    <exclude name="verifyNullUserNullPassword"/>
                    <include name="verifyValidLogin"/>
                </methods>
            </class>


            <class name="com.automation.ui.connected.testcases.home.HomePageTest">

                <methods>
                    <include name="launchHomePage"/>
                    <include name="addConnection"/>
                </methods>
            </class>


            <class name="com.automation.ui.connected.testcases.serverdetails.AddServerDetailsTest">

                <methods>
                    <include name="provideAllServerDetails"/>
                    <include name="clearCustomerNameTest"/>
                    <include name="addCustomerNameTest"/>
                    <include name="provideServerDetailsNextTest"/>
                    <include name="clearSiteNameTest"/>
                    <include name="provideServerDetailsCancelTest"/>
                    <include name="clearSiteNameTest"/>
                    <include name="provideConnectionType"/>


                </methods>
            </class>

            <class name="com.automation.ui.connected.testcases.dashboardviewtest.UAConnectionDetailsTest">
                <methods >
                    <include name="dcConnectionDropdownTest"/>
                    <include name="dcConnectionPauseTest"/>
                    <include name="dcConnectionEditTest"/>
                    <include name="dcConnectionRemoveTest"/>
                    <include name="dcConnectionDetailsTest"/>
                    <include name="dcConnectionDetailsEditTest"/>
                    <include name="dcConnectionDetailsEdit_Tabs"/>


                </methods>
            </class>

            <class name="com.automation.ui.connected.testcases.serverdetails.filter.FilterDetailsTest">
                <methods>

                    <include name="filterChangeFilters"/>
                    <include name="filterAllTag"/>
                    <include name="filterAseetTreeTag"/>
                </methods>
            </class>
        </classes>
        <!-- END CONNECTED -->
    </test>

</suite>
